<launch>

   <master auto="start"/>
        
         <param name="/use_sim_time" value="true"/>
   
<!--      ************** Stage Simulator ***************   -->
   <!-- <node pkg="stage_ros" type="stageros" name="stageros" args="$(find teb_local_planner_tutorials)/stage/maze_diff_drive.world">
		<remap from="base_scan" to="scan"/>
  	</node> -->

   <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
      <rosparam file="$(find rover)/rover/autonomy/config/costmap_common.yaml" command="load" ns="global_costmap" /> 
      <rosparam file="$(find rover)/rover/autonomy/config/costmap_common.yaml" command="load" ns="local_costmap" />
      <rosparam file="$(find rover)/rover/autonomy/config/local_costmap.yaml" command="load" />
      <rosparam file="$(find rover)/rover/autonomy/config/global_costmap.yaml" command="load" /> 
      <rosparam file="$(find rover)/rover/autonomy/config/base_local_planner.yaml" command="load" />
      <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
      <param name="controller_frequency" value="10.0" />
      <rosparam file="$(find rover)/rover/autonomy/config/costmap_converter.yaml" command="load" />
   </node>

   <!--  ****** Maps *****  -->
	<node name="map_server" pkg="map_server" type="map_server" args="$(find rover)/rover/simulation/maps/atacama_desert_og.yaml" output="screen">
                <param name="frame_id" value="map"/>
	</node>

   <arg name="use_map_topic" default="true"/>
   <arg name="scan_topic" default="rrbot/laser/scan" />

   <node pkg="amcl" type="amcl" name="amcl">
      <rosparam file="$(find rover)/rover/simulation/config/amcl_params.yaml" command="load" />
      <remap from="scan" to="$(arg scan_topic)"/>    
   </node>

	<!--    <param name="initial_pose_x"            value="2"/>
		<param name="initial_pose_y"            value="2"/>
		<param name="initial_pose_a"            value="0"/>
 -->

	  <!--  **************** Visualisation ****************  -->
   <node name="rviz" pkg="rviz" type="rviz" args="-d $(find rover)/rover/simulation/config/gmapping_config.rviz"/>

   <node pkg="tf" type="static_transform_publisher" name="map_tf" args="0 0 0 0 0 0 base_link map 100" />


</launch> 