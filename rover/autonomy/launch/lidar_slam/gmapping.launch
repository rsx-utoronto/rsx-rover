<launch>
  <arg name="scan_topic" default="scan"/>
  <arg name="base_frame" default="base_link"/>
  <arg name="odom_frame" default="odom"/>
  
  <!-- <arg name="pub_map_odom_transform" default="false" />
  <arg name="scan_subscriber_queue_size" default="5" />

  <arg name="tf_map_scanmatch_transform_frame_name" default="scanmatcher_frame" /> -->

  <node pkg="slam_gmapping" exec="slam_gmapping" name="slam_gmapping" output="screen">
    <param name="use_sim_time" value="false"/>
    <param name="map_frame" value="map"/>
    <param name="base_frame" value="$(arg base_frame)"/>
    <param name="odom_frame" value="$(arg odom_frame)"/>
    <remap from="scan" to="$(arg scan_topic)"/>
    <!-- If you have a YAML param file, use param_file attribute (not standard in XML, but some ROS 2 tools support it) -->
    <!-- <param_file value="/absolute/path/to/gmapping_params.yaml"/> -->
  </node>
  
<!-- 
  <node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="pointcloud_to_laserscan">
    <remap from="cloud_in" to="/ouster/points" />
    <remap from="scan" to="/scan" />
  </node> -->

  <node name="rviz2" pkg="rviz2" name="rviz_gmapping" args="-d $(find rover)/rover/autonomy/config/gmapping.rviz"/>
</launch>,.